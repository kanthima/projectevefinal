<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eve.myapplication.EditSQLiteActivity"
    android:background="@drawable/bg6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:padding="15dp"
        android:background="#82ffffff"
        android:id="@+id/linearLayout4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แก้ไขข้อมูล"
            android:id="@+id/textView2"

            android:textSize="@dimen/h1"
            android:layout_gravity="center_horizontal"
            android:textColor="#060606" />

        <EditText
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtNameED"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtDateED"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtCountED"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtDataED"
            android:lines="3"
            android:gravity="top"
            android:layout_alignTop="@+id/button9"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:onClick="clickBackEdit"
        android:id="@+id/button9"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:onClick="clickUpdateSQLite"
        android:id="@+id/button6"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
